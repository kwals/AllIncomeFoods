<h1 class="logo">
  <%= image_tag "snapfreshlogo.png", width: "40%", title: "snapfresh.org", alt: "snapfresh.org" %>
</h1>

<h2><%= t(:indexenter1) %></h2>

<%= form_tag retailers_path, method: 'get' do %>
  <div data-role="fieldcontain">
    <%= text_field_tag :address, params[:address], id:'addressfield', type: "search", placeholder: "94106 OR 85 2nd St, San Francisco"%>
  </div>
  <%= submit_tag t(:subbutton1), id:'submitbutton', type: "submit", "data-inline" => "true" %>
<% end %>

<div class="sms">
  <p><%= t(:submit1) %></p>
  <p class="phone">(415) 889-8650</p>
</div>
